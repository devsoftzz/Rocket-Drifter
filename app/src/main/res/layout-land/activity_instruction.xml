<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E172C"
    tools:context=".instruction">

    <ImageView
        android:id="@+id/int_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_space"/>

    <ImageView
        android:id="@+id/int_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_space"/>
    <ImageView
        android:layout_margin="24dp"
        android:id="@+id/rocket"
        android:paddingStart="24dp"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/rocket"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up"
        android:layout_marginTop="60dp"
        android:layout_marginStart="200dp"/>
    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="70dp"
        android:textSize="24dp"
        android:text="Tap On Screen To Move Rocket Up"
        android:textColor="#fff"/>
    <ImageView
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up"
        android:rotation="180"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="200dp"/>
    <TextView
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="70dp"
        android:textSize="24dp"
        android:text="Release It To Move Rocket Down"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/enter"
            android:layout_marginEnd="16dp"
            android:text="Enter"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#fff"
            android:textSize="24dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/btn_bg"/>
    </LinearLayout>


</FrameLayout>